<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.ntsc.car.dao.CarDao">
	<resultMap id="BaseResultMap" type="cn.edu.ntsc.car.domain.Car">
		<result column="name" property="name" />
		<result column="plateNumber" property="plateNumber" />
		<result column="tel" property="tel" />
	</resultMap>

	<parameterMap id="Car" type="cn.edu.ntsc.car.domain.Car"/>

	<sql id="Base_Column_List">
		name, plateNumber, tel
	</sql>

	<select id="findCarByPlateNumber" resultMap="BaseResultMap" parameterType="java.lang.String">
		select Name,PlateNumber,Tel from Cars where 1=1 
		<if test="plateNumber != null and plateNumber != ''"><!-- 关键词检索 -->
		and PlateNumber like '%'+#{plateNumber}+'%'
		</if>
	</select>

</mapper>
